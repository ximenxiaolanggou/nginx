<service>  
	 <id>nginx</id>   
	 <name>Nginx Service</name> 
	 <description>High Performance Nginx Service</description>  
	 <logpath>D:\xampp\nginx\logs</logpath> 
	 <log mode="roll-by-size">    
		 <sizeThreshold>10240</sizeThreshold>   
		 <keepFiles>8</keepFiles>  
	 </log> 
	 <executable>E:\nginx-1.8.0\nginx-1.8.0\nginx.exe</executable>  
	 <startarguments>-p E:\nginx-1.8.0\nginx-1.8.0</startarguments> 
	 <stopexecutable>E:\nginx-1.8.0\nginx-1.8.0\nginx.exe</stopexecutable>  
	 <stoparguments>-p E:\nginx-1.8.0\nginx-1.8.0 -s stop</stoparguments>
 </service>